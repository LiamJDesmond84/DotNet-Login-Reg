@model DotNet_Login_Reg.Models.User

<div>
    <div style="display: flex; flex-direction: row; justify-content: center; color: green">
    <h1></h1>
        <p style="margin-right: 50px">Add a Dish</p>
        <a asp-controller="Home" asp-action="Index">Home</a>
    </div>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <form asp-action="SubmitRecipe" asp-controller="Home" method="post">
        <span asp-validation-for="FirstN"></span>
        <label asp-for="Name">Dish Name</label>
        <input asp-for="Name" type="text" />

        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef">Chef</label>
        <input asp-for="Chef" type="text" />

        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness">Tastiness:</label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <span asp-validation-for="Email"></span>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="text" />

        <span asp-validation-for="Password"></span>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="text" />
        <button type="submit">Submit Recipe</button>
    </form>
</div>