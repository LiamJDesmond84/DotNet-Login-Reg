@model DotNet_Login_Reg.Models.User

<div>
    <div style="display: flex; flex-direction: row; justify-content: center; color: green">
    <h1></h1>
        <p style="margin-right: 50px">Register</p>
        <a asp-controller="Home" asp-action="Index">Home</a>
    </div>


    <form asp-action="Register" asp-controller="Home" style="display: flex; flex-direction: column; justify-content: center; width: 300px">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" type="text" />

        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" type="text" />


        <span asp-validation-for="Email"></span>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="text" />

        <span asp-validation-for="Password"></span>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="text" />

        <span asp-validation-for="Confirm"></span>
        <label asp-for="Confirm">Confirm Password</label>
        <input asp-for="Confirm" type="text" />

        <button type="submit">Register</button>
    </form>
</div>